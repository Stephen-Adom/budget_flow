<section
  class="
    grid
    grid-cols-1
    md:grid-cols-[75%_25%]
    lg:grid-cols-[75%_25%]
    gap-5
    py-5
    px-3
  "
>
  <div class="overview">
    <h1 class="text-3xl font-bold tracking-wider">Dashboard</h1>
    <p class="text-sm italic text-neutral-500">Here's your financial overview</p>

    <div
      class="
        card
        mt-6
        shadow-[0_2px_15px_-3px_rgba(0,0,0,0.07),0_10px_20px_-2px_rgba(0,0,0,0.04)]
        block
        rounded-lg
        bg-white
      "
    >
      <div class="flex items-center p-6 card-body gap-x-4">

        <%= image_tag "budget-logo.png", width: "15%", alt: "budget-logo" %>

        <div>
          <h6 class="mb-2 text-sm text-neutral-500">My Overall Expenses</h6>
          <h1 class="text-3xl font-light md:text-5xl">$200,000.00</h1>
        </div>
      </div>
    </div>

    <% if @categories.any? %>

      <div
        class="
          grid
          grid-cols-2
          gap-5
          mt-8
          categories-list
          sm:grid-cols-2
          md:grid-cols-3
          lg:grid-cols-4
        "
      >
        <% @categories.each do |category| %>
          <%= render "shared/category_card", category: category %>
        <% end %>
      </div>

    <% else %>

      <div
        id="alert-additional-content-1"
        class="
          p-4
          mt-5
          mb-4
          text-blue-800
          border
          border-blue-300
          rounded-lg
          bg-blue-50
        "
        role="alert"
      >
        <div class="flex items-center">
          <svg
            class="flex-shrink-0 w-4 h-4 mr-2"
            aria-hidden="true"
            xmlns="http://www.w3.org/2000/svg"
            fill="currentColor"
            viewBox="0 0 20 20"
          >
            <path
              d="M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5ZM9.5 4a1.5 1.5 0 1 1 0 3 1.5 1.5 0 0 1 0-3ZM12 15H8a1 1 0 0 1 0-2h1v-3H8a1 1 0 0 1 0-2h2a1 1 0 0 1 1 1v4h1a1 1 0 0 1 0 2Z"
            />
          </svg>
          <span class="sr-only">Info</span>
          <h3 class="text-lg font-medium">You Have no Categories</h3>
        </div>
        <div class="mt-2 mb-4 text-sm">
          Add some categories to manage your expenses
        </div>
        <div class="flex">

          <%= link_to new_category_path, type:"button", class:"text-white bg-blue-800 hover:bg-blue-900 focus:ring-4 focus:outline-none focus:ring-blue-200 font-medium rounded-lg text-xs px-3 py-1.5 mr-2 text-center inline-flex items-center" do %>
            <svg
              class="-ml-0.5 mr-2 h-3 w-3"
              aria-hidden="true"
              xmlns="http://www.w3.org/2000/svg"
              fill="currentColor"
              viewBox="0 0 20 14"
            >
              <path
                d="M10 0C4.612 0 0 5.336 0 7c0 1.742 3.546 7 10 7 6.454 0 10-5.258 10-7 0-1.664-4.612-7-10-7Zm0 10a3 3 0 1 1 0-6 3 3 0 0 1 0 6Z"
              />
            </svg>
            Add Category
          <% end %>

        </div>
      </div>

    <% end %>

  </div>

  <div class="transactions-overview">
    <div class="bg-white border rounded-md cursor-pointer card border-neutral-300">
      <div class="p-6 card-body">
        <h6 class="font-semibold">Recent Transactions</h6>
        <span class="block text-xs italic text-neutral-400">As of today...</span>

        <ul class="pl-0 mt-4">
          <li>
            <a href="" class="flex items-center justify-between">
              <section class="flex items-center gap-2">
                <div
                  class="
                    flex
                    items-center
                    justify-center
                    w-10
                    h-10
                    rounded-md
                    bg-primaryBlueDeep
                  "
                >
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke-width="1.5"
                    stroke="currentColor"
                    class="w-5 h-5 stroke stroke-white"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      d="M6.429 9.75L2.25 12l4.179 2.25m0-4.5l5.571 3 5.571-3m-11.142 0L2.25 7.5 12 2.25l9.75 5.25-4.179 2.25m0 0L21.75 12l-4.179 2.25m0 0l4.179 2.25L12 21.75 2.25 16.5l4.179-2.25m11.142 0l-5.571 3-5.571-3"
                    />
                  </svg>
                </div>
                <div>
                  <h6 class="mb-0 text-sm font-semibold">Super</h6>
                  <span class="block text-xs text-neutral-400">2 min ago</span>
                </div>
              </section>

              <span class="text-sm font-bold text-primaryBlue">$200</span>
            </a>
          </li>
        </ul>
      </div>
    </div>
  </div>
</section>
