<!-- Main modal -->
<div
  id="defaultModal"
  tabindex="-1"
  aria-hidden="true"
  class="
    fixed
    top-0
    left-0
    right-0
    z-50
    hidden
    w-full
    p-4
    overflow-x-hidden
    overflow-y-auto
    md:inset-0
    h-[calc(100%-1rem)]
    max-h-full
  "
>
  <div class="relative w-full max-w-2xl max-h-full">
    <!-- Modal content -->
    <div class="relative bg-white rounded-lg shadow">
      <!-- Modal header -->
      <div class="flex items-start justify-between p-4 border-b rounded-t ">
        <h3 class="text-xl font-semibold text-gray-900">
          New Category
        </h3>
        <button
          type="button"
          class="
            text-gray-400
            bg-transparent
            hover:bg-gray-200
            hover:text-gray-900
            rounded-lg
            text-sm
            p-1.5
            ml-auto
            inline-flex
            items-center
          "
          data-modal-hide="defaultModal"
        >
          <svg
            aria-hidden="true"
            class="w-5 h-5"
            fill="currentColor"
            viewBox="0 0 20 20"
            xmlns="http://www.w3.org/2000/svg"
          ><path
              fill-rule="evenodd"
              d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z"
              clip-rule="evenodd"
            ></path></svg>
          <span class="sr-only">Close modal</span>
        </button>
      </div>
      <%= form_with(model: @category, url: categories_path, method: :post) do |form| %>
        <!-- Modal body -->
        <div class="p-6 space-y-6">

          <div class="mb-6">
            <%= form.label :name,
                       "Category Name",
                       class: "block mb-2 text-sm font-medium text-gray-900 " %>
            <%= form.text_field :name,
                            class: "form-control",
                            placeholder: "Category Name",
                            required: true %>
          </div>

          <div class="mb-6">
            <%= form.label :icon,
                       "Category Icon",
                       class: "block mb-2 text-sm font-medium text-gray-900 " %>
            <%= form.select :icon,
                        options_for_select(category_icons),
                        class: "form-control",
                        placeholder: "Category Name",
                        required: true %>
          </div>

        </div>
        <!-- Modal footer -->
        <div
          class="
            flex
            items-center
            p-6
            space-x-2
            border-t
            border-gray-200
            rounded-b
          "
        >

          <%= form.submit "Add Category", class: "btn btn-custom" %>
          <button
            data-modal-hide="defaultModal"
            type="button"
            class="
              px-5
              py-2
              text-xs
              text-gray-500
              bg-white
              border
              border-gray-200
              rounded-sm
              hover:bg-gray-100
              focus:ring-4
              focus:outline-none
              focus:ring-blue-300
              hover:text-gray-900
              focus:z-10
            "
          >Cancel</button>
        </div>

      <% end %>

    </div>
  </div>
</div>
