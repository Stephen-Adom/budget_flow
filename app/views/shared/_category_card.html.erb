<div
  id="<%= dom_id(category) %>"
  class="bg-white border rounded-md cursor-pointer card border-neutral-300"
>

  <div class="flex flex-col p-4 md:p-6 card-body gap-y-5">
    <div class="flex items-center justify-between">

      <section class="flex items-center gap-2">
        <div
          class="
            flex
            items-center
            justify-center
            w-16
            h-16
            rounded-sm
            expense-icon
            bg-primaryBlueDeep
          "
        >
          <%= find_icon(category.icon).html_safe %>
        </div>

        <div>
          <span class="block text-sm text-neutral-400">
            <%= category.name %>
          </span>

          <small class="block mt-4 text-neutral-400">
            <%= current_user.name %>
          </small>
        </div>
      </section>

      <div>
        <h5 class="text-xl font-semibold"><%= number_to_currency(category.total_expenses) %></h5>
        <%= link_to "view",
        category_expenses_path(category),
        class: "block text-sm text-primaryBlue font-semibold text-right",
        data: {
          turbo: "false"
        } %>
      </div>
    </div>

  </div>

</div>
