<h2>Resend confirmation instructions</h2>

<%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br/>
    <%= f.email_field :email,
                  autofocus: true,
                  autocomplete: "email",
                  value:
                    (
                      if resource.pending_reconfirmation?
                        resource.unconfirmed_email
                      else
                        resource.email
                      end
                    ) %>
  </div>

  <div class="actions">
    <%= f.submit "Resend confirmation instructions" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

<section id="login-section" class="w-full h-screen p-3 bg-baseColor md:p-10">
  <section class="w-full sm:w-full md:w-[60%] lg:w-[40%] mx-auto">
    <h1
      class="
        hidden
        mb-2
        text-5xl
        font-light
        text-center
        sm:hidden
        md:block
        lg:block
      "
    >Resend confirmation instructions</h1>

    <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :email %><br/>
        <%= f.email_field :email,
                      class: "form-control #{check_if_valid(f.object.errors, :email)}",
                      placeholder: "Email",
                      autofocus: true,
                      autocomplete: "email",
                      value:
                        (
                          if resource.pending_reconfirmation?
                            resource.unconfirmed_email
                          else
                            resource.email
                          end
                        ) %>
        <%= render "shared/error_message", errors: f.object.errors, label: :email %>
      </div>

      <div class="actions">
        <%= f.submit "Resend confirmation instructions",
                 class:
                   "w-full py-4 text-lg text-white rounded-md btn bg-primaryBlue hover:bg-primaryBlueDeep" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>

  </section>
</section>
